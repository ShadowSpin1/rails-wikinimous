<div class="container header">
  <h2><%= link_to 'Wikinimous', articles_path, class: "text-decoration-none link-secondary" %></h2>
  <h2><%= link_to "New article", new_article_path, class: "text-decoration-none link-secondary"%></h2>
</div>

<div class="container articles">
  <h1><%= @article.title %></h1>
  <p><%= @article.content %></p>
  <div class="buttons">
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-dark" %>
    <%= link_to "Delete",
      article_path(@article),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-light"
    %>
  </div>
</div>
